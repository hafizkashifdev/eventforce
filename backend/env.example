# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/eventforce?schema=public"
DATABASE_URL_TEST="postgresql://postgres:password@localhost:5432/eventforce_test?schema=public"

# Redis (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Application
NODE_ENV=development
PORT=4000
API_PREFIX=api/v1
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email (Optional - for password reset)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@eventforce.com
SENDGRID_FROM_NAME=Event Force

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Security
BCRYPT_ROUNDS=12

# Business Rules
MIN_BOOKING_NOTICE_HOURS=2
CANCELLATION_WINDOW_HOURS=24
MAX_BOOKING_DURATION_HOURS=24
